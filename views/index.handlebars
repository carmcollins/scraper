<!-- Intro -->
<div id="index-banner">
  <div class="section">
    <div class="container">
      <div class="row center">
        <div class="col s12">
            <img src="/photos/goop-white.png" id="goop-img">
            <p class="white-text">
                <a href="/scrape" class="waves-effect btn-flat white-text">Scrape New Articles</a> |
                <a id="clear-btn" class="waves-effect btn-flat white-text">Clear Articles</a>
            </p>
        </div>
      </div>
    </div>
  </div>
</div>
{{#if data}}
<!-- Container -->
<div class="container">
  <div class="section">
    <div class="row">
        <!-- Article Cards (with photo) -->
        {{#each data}}
        <div class="col s12">
            <div class="card horizontal">
                <div class="card-image">
                    <img src="{{this.photoURL}}" class="article-photo">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <h4 class="header"><a href="{{this.link}}" target="blank">{{this.title}}</a></h4>
                        <p>{{this.summary}}</p>
                    </div>
                    <div class="card-action">
                        <a data-id="{{this._id}}" class="teal-text text-lighten-3 save-btn">Save Article</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{else}}
<h5 class="page-notes grey-text center-align">No articles have been scraped</h5>
{{/if}}